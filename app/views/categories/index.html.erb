<%= render partial: 'layouts/nav/navbar_auth',  locals: {path: url_for(:back),name: 'Categories', arrow_back: false} %>
<div id="categories" class="h-full flex max-h-full overflow-y-auto flex-col flex-grow pb-48 pt-5">
  <% @categories.each do |category| %>
    <%= link_to category_activities_path(category_id: category.id)  do %>
      <%= render category %>
    <% end %>
  <% end %>
  <div class="w-full flex justify-center">
    <div class="w-full lg:max-w-lg md:mx-auto mt-auto bottom-0 hover:bg-primary-700 text-center focus:bg-secondary fixed m-0-auto bg-secondary p-4">
      <%= link_to "Add New category", new_category_path, class: "bg-transparent block w-full h-12 max-h-full flex items-center justify-center text-white   text-white px-3 py-3 font-semibold border border-white rounded-md" %>
    </div>
  </div>
</div>
